<html>
    <head>
        <title>Insert coin into {{machine_name}}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"/>
    </head>
    <body>
        <div class="container">
            <h1 class="mt-5">{{machine_name}}</h1>
            <p>cost: 1 token</p>
            <p>Remaining: 20 tokens</p>
            <button class="btn btn-primary col-12" id="mainbutton">insert coin</button>
        </div>
    </body>

</html>
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script>
    function coin(){
        game_id = {{game_id}}
        $.get("/coin", {"game" : {{game_id}} })
    }

    $("#mainbutton").on("click", coin());
</script>